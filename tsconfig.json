{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es2015",
        "sourceMap": true,
        "jsx": "react",
        "target": "es2015",
        "allowJs": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./react-src"
    ],
    "exclude": [
        "node_modules"
    ]
}